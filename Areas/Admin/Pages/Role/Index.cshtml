@page "/Admin/Role"
@model App.Admin.Role.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] ="Danh sách các role"; 
}
<h1>@ViewData["Title"]</h1> 

<partial name="_StatusMessage" model="@Model.StatusMessage"/>

<div class="mb-2">
<a class="btn btn-primary" asp-page="./Create" >Tạo mới</a>
<a class="btn btn-primary" asp-page="../User/Index"> Qu</a>
</div>

<table class="table">
    <tr>
        <th>Tên role(vai trò)</th>
        <th> Tác vụ </th>
    </tr>
    
    @foreach (var role in Model.roles)
    {
        <tr>
        <td>
            <p>
            @role.Name

            </p>
            @foreach(var claim in role.Claims)
            {
                <small>@claim</small><br>
            }
        </td>
        <td>
            <a class="btn btn-danger btn-sm" asp-page="./Delete"  asp-route-roleid="@role.Id">Xóa</a>
            <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-roleid="@role.Id">Cập nhập</a>
        </td>
        </tr>
    }
    
</table>